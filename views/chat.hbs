<div class="container-fluid">
	<div class="row header">
		<div class="col-md-6">
			<h1>Bienvenidos al chat!</h1>
		</div>
		<div class="col-md-6">
			<button type="button" id="connect" class="btn btn-primary">
				Conectarse
			</button>
			<div id="welcome"></div>
			<div id="error"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<form id="form">
				<div class="row chat-container">
					<div class="col-md-12 messages">
						<div id="messages"></div>
					</div>
					<div class="col-md-12">
						<div class="row inputs">
							<div class="col-md-5">
								<label
									for="exampleFormControlInput1"
									class="form-label"
								>Email</label>
								<input
									type="email"
									class="form-control"
									id="email"
									placeholder="name@example.com"
									required
								/>
							</div>
							<div class="col-md-5">
								<label
									for="exampleFormControlInput1"
									class="form-label"
								>Mensaje</label>
								<input
									type="message"
									class="form-control"
									id="message"
									placeholder="name@example.com"
									required
								/>
							</div>
							<div class="col-md-2">
								<button type="submit" id="send" class="btn btn-dark">
									Enviar
								</button>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<script src="/assets/scripts.js"></script>